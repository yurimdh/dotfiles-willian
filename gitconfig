[alias]
  aa = add --all
  ap = add --patch
  b = branch
  branches = for-each-ref --sort=-committerdate --format=\"%(color:blue)%(authordate:relative)\t%(color:red)%(authorname)\t%(color:white)%(color:bold)%(refname:short)\" refs/remotes
  ci = commit -v
  cleanup = !git remote prune origin && git gc && git clean -df && git stash clear
  co = checkout
  dw = diff --word-diff
  fl = log -p
  lg = log --oneline --decorate
  pf = push --force-with-lease
  sb = status -sb
  sh = !git-sh
  st = status
  who = shortlog -s -n --
[branch]
  autosetuprebase = always
[color]
  branch = auto
  diff = auto
  status = auto
  ui = auto
[color "diff"]
  commit = yellow
  frag = cyan reverse
  meta = cyan
  new = green
  old = red
  plain = normal
  whitespace = normal red
[commit]
  template = ~/.gitmessage
[core]
  autocrlf = input
  editor = nvim
  excludesfile = ~/.gitignore
  ignorecase = false
[diff]
  colorMoved = zebra
[fetch]
  prune = true
[github]
  user = yurimdh
[help]
  autosetupmerge = true
  autocorrect = 1
[init]
  defaultBranch = main
  templatedir = ~/.git_template
[merge]
  ff = only
[push]
  default = current
[rebase]
  autosquash = true
